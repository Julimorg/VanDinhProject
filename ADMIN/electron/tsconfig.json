{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["node", "electron"],
    "skipLibCheck": true,
    "moduleDetection": "force"
  },
  "include": ["main.ts", "preload.ts"],
  "exclude": ["node_modules"]
}